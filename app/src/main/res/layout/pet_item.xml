<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cd_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="351dp"
    android:layout_height="164dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="50dp"
    app:cardPreventCornerOverlap="false"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#FFFFFF"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_profilepic"
            android:layout_width="141dp"
            android:layout_height="139dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tv_petName"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_profilepic"
            android:text="Pet Name"
            android:textColor="#455A64"

            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="143dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/iv_profilepic"
            app:cardBackgroundColor="#455A64"
            app:cardCornerRadius="100dp">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_marginStart="154.5dp"
            android:layout_marginTop="21.5dp"
            android:layout_toEndOf="@id/iv_profilepic"
            android:src="@drawable/arrow"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/iv_profilepic"
            android:text="Breed"
            android:layout_marginTop="47dp"
            android:layout_marginStart="19dp"
            android:textSize="16dp"
            android:textColor="#455A64"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/iv_profilepic"
            android:text="Pet Age"
            android:layout_marginTop="76dp"
            android:layout_marginStart="19dp"
            android:textSize="16sp"
            android:textColor="#898989"/>
        <ImageView
            android:id="@+id/iv_profilelocation"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/locate"
            android:layout_toEndOf="@id/iv_profilepic"
            android:layout_marginStart="20dp"
            android:layout_marginTop="127dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="51dp"
            android:layout_toEndOf="@id/iv_profilepic"
            android:layout_marginTop="128dp"
            android:text="Distance: 4Km"
            android:textColor="#455A64"
            android:textSize="16sp"/>



    </RelativeLayout>


</androidx.cardview.widget.CardView>