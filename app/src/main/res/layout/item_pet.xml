<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cd_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profile_pic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="@dimen/dimen_40">

            <ImageView
                android:id="@+id/iv_profilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_petName"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/card_profile_pic"
            android:fontFamily="@font/poppins_medium"
            android:text="Pet Name"
            android:textColor="#455A64"

            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="143dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/card_profile_pic"
            app:cardBackgroundColor="#455A64"
            app:cardCornerRadius="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:elevation="@dimen/dimen_40"
                    android:src="@drawable/arrow" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_breed"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="47dp"
            android:layout_toEndOf="@id/card_profile_pic"
            android:fontFamily="@font/poppins_medium"
            android:text="Breed"
            android:textColor="#455A64"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="76dp"
            android:layout_toEndOf="@id/card_profile_pic"
            android:fontFamily="@font/poppins_medium"
            android:text="Pet Age"
            android:textColor="#898989"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_profilelocation"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="127dp"
            android:layout_toEndOf="@id/card_profile_pic"
            android:src="@drawable/locate" />

        <TextView
            android:id="@+id/tv_dis"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="128dp"
            android:layout_toEndOf="@id/card_profile_pic"
            android:fontFamily="@font/poppins_medium"
            android:text="Distance: 4Km"
            android:textColor="#455A64"
            android:textSize="16sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>