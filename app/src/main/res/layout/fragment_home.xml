<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/RV_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#72E2B3"
        tools:context=".view.view.fragment.HomeFragment">

        <RelativeLayout

            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/TV_locate"
                android:layout_width="67dp"
                android:layout_height="24dp"
                android:layout_marginLeft="185dp"
                android:fontFamily="@font/poppins_medium"
                android:text="lucknow"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/IV_location"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginStart="159dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/location" />


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/search" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RV_bott"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:height="27dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Pet Categories"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_topRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/txt1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                tools:itemCount="5"
                tools:listitem="@layout/home_category_item" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_nav"
            android:layout_below="@id/RV_bott"
            android:layout_marginTop="30dp"
            android:background="@drawable/corner_radius">

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="sort by"
                android:textColor="#455A64" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="49dp"
                android:background="#E5E5E5"
                android:orientation="vertical"
                tools:listitem="@layout/pet_item"

                >

            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@drawable/bottom_nav_color_selector"
            app:itemTextColor="@drawable/bottom_nav_color_selector"
            app:menu="@menu/bottom_nav_menu" />
    </RelativeLayout>

</layout>



