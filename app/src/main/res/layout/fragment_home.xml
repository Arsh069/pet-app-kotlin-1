        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#72E2B3"
        tools:context=".view.view.fragment.HomeFragment">

        <RelativeLayout
            android:id="@+id/RV_bott"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <!--<TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:height="27dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/pet_categories"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />-->

            <!--<androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_topRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/txt1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                tools:itemCount="5"
                tools:listitem="@layout/home_category_item" />-->

            <RadioGroup
                android:id="@+id/rg_pet_categories"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56"
                android:layout_marginHorizontal="@dimen/dimen_28"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_dog"
                    style="@style/RadioButtonPetCategories"
                    android:button="@null"
                    android:checked="true"
                    android:text="@string/dog" />

                <RadioButton
                    android:id="@+id/rb_cat"
                    style="@style/RadioButtonPetCategories"
                    android:button="@null"
                    android:checked="false"
                    android:text="@string/cat" />

                <RadioButton
                    android:id="@+id/rb_bird"
                    style="@style/RadioButtonPetCategories"
                    android:button="@null"
                    android:checked="false"
                    android:text="@string/bird" />

                <RadioButton
                    android:id="@+id/rb_fish"
                    style="@style/RadioButtonPetCategories"
                    android:button="@null"
                    android:checked="false"
                    android:text="@string/fish" />

            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/RV_bott"
            android:layout_marginTop="30dp"
            android:background="@drawable/corner_radius">

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/sort_by"
                android:textColor="#455A64" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="49dp"
                android:layout_marginBottom="?attr/actionBarSize"
                android:background="@color/white"
                android:orientation="vertical"
                tools:listitem="@layout/item_pet"

                >

            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>

    </RelativeLayout>

</layout>