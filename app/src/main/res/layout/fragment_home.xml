<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#72E2B3"
        android:id="@+id/RV_top"
        tools:context=".view.HomeFragment">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="55dp"
            android:id="@+id/topBar"
            >

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/TV_locate"
                android:layout_width="67dp"
                android:layout_height="24dp"
                android:layout_marginLeft="185dp"
                android:text="lucknow"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/IV_location"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginRight="6dp"
               android:layout_marginLeft="159dp"
                android:src="@drawable/location" />


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/search"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RV_bott"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:height="27dp"
                android:text="Pet Categories"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/txt1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                tools:itemCount="5"
                tools:listitem="@layout/home_category_item"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/RV_bott"
            android:layout_marginTop="30dp"
            android:background="@drawable/corner_radius">

            <TextView
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginEnd="15dp"
                android:text="sort by"
                android:textColor="#455A64" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="49dp"
                android:background="#E5E5E5"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/pet_item">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>



</layout>



